<div id="<%= dom_id interview %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Interviewers:</strong>
    <%= interview.interviewers %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Interviewee:</strong>
    <%= interview.interviewee %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Questionid:</strong>
    <%= interview.questionid %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Questionstatus:</strong>
    <%= interview.questionstatus %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this interview", interview, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this interview', edit_interview_path(interview), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
